#:kivy 2.0.3
# hangman.kv
#

<StatusLabel@Label>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 1, 1, 1
    font_name: 'Roboto'
    font_size: '14sp'
    color: 0, 0, 0, 1
    size_hint_y: None
    height: 40
    background: 0, 0, 0, 1


# The class HangmanGame inherits Widget
<HangmanGame>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
    padding: 100
    canvas:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 0.5
            Line:
                points: self.x, self.y, self.width, self.y, self.width, self.height, self.x, self.height, self.x, self.y
                width: 20
            #Rectangle:
            #    pos: root.pos
            #    size: root.size

        orientation: 'vertical'
        padding: 50
        spacing: 10
        size_hint: (None, None)
        height: root.height - 10
        width: root.width - 10
    
        StatusLabel:
            id: partially_hidden
            text: " ".join(root.partially_hidden_list)
            font_size: '24sp'

        StatusLabel:
            id: secret_word
            text: root.secret_word + " " + str(root.secret_word_len)
            # text: root.sword

        StatusLabel:
            id: status_line_1
            text: "Antal gissningar kvar " + str(root.number_guesses)

        StatusLabel:
            id: status_line_2
            text: "Gissade bokstäver: " + " ".join(root.guesses_list)
            # text: "Gissade bokstäver: " + root.guesses

            
        TextInput:
            id: text_input
            halign: 'center'
            border: (1, 1, 1, 10)
            cursor_blink: False
            cursor_color: [1, 1, 1, 1]
            cursor_width: 4
            focus: True
            font_name: 'Roboto'
            font_size: '18sp'
            height: '40sp'
            hint_text: "Skriv in en bokstav"
            multiline: False
            on_focus: self.focus = True
            on_text_validate: root.update_status_line(self.text)
            # on_text_validate: root.number_guesses -= 1
            # on_text_validate: root.on_enter(self.text)
            size_hint_y: None

        Button:
            text: "Avsluta"
            on_press: raise SystemExit(0)
            size_hint: (None, None)
            height: '24sp'
            width: root.width / 4
            center_x: root.center_x
            halign: 'center'
